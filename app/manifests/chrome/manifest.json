{
    "name": "__MSG_appName__",
    "version": "0.2.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["js/events.js"],
        "persistent": false
    },
    "permissions": [
        "alarms",
        "tabs",
        "http://*/*",
        "https://*/*",
        "background",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "notifications",
        "storage"
    ],
    "omnibox": {
        "keyword": "OMNIBOX-KEYWORD"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Remindoro",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "images/icon-48.png"
    ],
    "tts_engine": {
        "voices": [{
            "voice_name": "Alice",
            "lang": "en-US",
            "event_types": [
                "start",
                "marker",
                "end"
            ]
        }]
    }
}
